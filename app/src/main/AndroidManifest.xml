<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visual.android.housemate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.CreateAccountActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.CreatePaymentPlanActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.FinishPlanActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.PaymentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.PaymentItemsPreviewActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.PlanDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.CreateGroupActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:theme="@style/AppThemeHome"
            android:screenOrientation="portrait"
            android:name="com.visual.android.housemate.LoginActivityTemp"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>